<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardCornerRadius="7dp"
    app:cardElevation="5dp"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:padding="7dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearVaccineName"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:id="@+id/tvVaccineName"
                android:text="BCG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvVaccineDate"
                    android:text="Apr 5 2024"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:id="@+id/tvScheduleStatus"
                    android:text="Missed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageButton
                android:visibility="gone"
                android:id="@+id/checked"
                android:background="@drawable/ic_action_checkbox"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <ImageButton
                android:visibility="gone"
                android:layout_gravity="center"
                android:id="@+id/iconDisabled"
                android:background="@drawable/ic_action_icon_disabled"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <ImageButton
                android:visibility="gone"
                android:backgroundTint="@color/colorPrimary"
                android:background="@drawable/ic_action_info_test"
                android:id="@+id/imgBtnView"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>
